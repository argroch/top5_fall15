<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Artist/Group Name", class: "form-control center-it" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.select(:rating, @ratings.collect { |r| [ r ] }, { include_blank: "Rate It!" }, class: "form-control" ) %>
  </div>
  <div class="form-group">
    <%= f.select(:artist_id, @artists.collect { |a| [a.name, a.id] }, { include_blank: "Choose an Artist" }, class: "form-control" ) %>
  </div>
  <div class="form-group">
    <%= f.submit "Sing It Loud", class: "btn btn-warning" %>
  </div>
<% end %>
