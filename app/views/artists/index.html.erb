<p id="notice"><%= notice %></p>

<h1>The Artists</h1>

<div class="new-song-link">
  <%= link_to new_artist_path do %>
    <span class="glyphicon glyphicon-plus"></span> Add
  <% end %>
</div>

<div class="row">
  <% @artists.each_with_index do |artist, index| %>
    <% if ((@artists.length%2 == 1) && (index < @artists.length-1)) || @artists.length%2 == 0 %>
      <div class="col-md-6">
    <% elsif (@artists.length%2 == 1) && (index == @artists.length-1) %>
      <div class="col-md-6 col-md-offset-3">

    <% end %>
      <div class="well">
        <h3><%= link_to artist.name, artist %></h3>
        <p>
          <%= link_to edit_artist_path(artist) do %>
            <span class="glyphicon glyphicon-pencil"></span> Edit
          <% end %>
          &nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to artist, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span> Delete
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
</div>
